<div id="chat-rooms">
  <p id="notice"><%= notice %></p>

  <h1>Listing Chat Rooms</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Channel</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @chat_rooms.each do |chat_room| %>
        <tr>
          <td><%= chat_room.name %></td>
          <td><%= chat_room.channel %></td>
          <td><%= link_to 'Show', chat_room %></td>
          <td><%= link_to 'Edit', edit_chat_room_path(chat_room) %></td>
          <td><%= link_to 'Destroy', chat_room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to '新增聊天室', new_chat_room_path %>
</div>

