<div class="container">
  <div id="chat-rooms">
    <p id="notice"><%= notice %></p>

    <h1>聊天室</h1>
    <p> Hi <%= @user %> </p>
    <span> <%= link_to "換使用者暱稱", users_path, :method=>:destroy, :class=>"btn btn-warning btn-xs"%></span>

    <table class="table table-striped" style="width:50%">
      <thead>
        <tr>
          <th>名稱</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @chat_rooms.each do |chat_room| %>
          <tr>
            <td><%= chat_room.name %></td>
            <td><%= link_to '進入', chat_room_path(chat_room) , :class=>"btn btn-default btn-xs" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to '新增聊天室', new_chat_room_path, :class=>"btn btn-default" %>
  </div>
</div>
